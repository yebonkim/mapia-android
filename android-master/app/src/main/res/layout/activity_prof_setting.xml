<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context="com.mapia.setting.ProfileSetting">

    <LinearLayout android:orientation="vertical" android:id="@+id/fh_header" android:background="#2e3e4f" android:layout_width="fill_parent" android:layout_height="53.5dip" android:layout_alignParentTop="true">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="53.0dip"
            android:background="#ffffff">
            <LinearLayout android:gravity="center|right" android:id="@+id/fh_button_close" android:layout_width="51.0dip" android:layout_height="fill_parent">
                <ImageView android:layout_width="46.0dip" android:layout_height="46.0dip" android:src="@drawable/main_menu" />
            </LinearLayout>

            <LinearLayout android:gravity="center" android:id="@+id/fh_title" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_marginLeft="0dip" android:layout_weight="1.0">
                <TextView android:id="@+id/fh_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="프로필 설정" android:textColor="#56C6C9" android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="10pt" />
            </LinearLayout>
            <LinearLayout android:gravity="center|left" android:layout_width="51.0dip" android:layout_height="fill_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:background="#ffe6e6e6" android:layout_width="fill_parent" android:layout_height="0.5dip" android:layout_below="@+id/fh_header" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <ImageView
            android:id="@+id/imgProfileImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/dot"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <ImageView
            android:id="@+id/btnProfImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dot"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lvProfSetting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="30dp"></ListView>
    <ListView
        android:id="@+id/lvProfSetting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="30dp"></ListView>
    <ListView
        android:id="@+id/lvProfSetting3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="30dp"></ListView>
</LinearLayout>
